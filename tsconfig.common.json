{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2015", "DOM"],
    "esModuleInterop": true
  },
  "compileOnSave": false
}
